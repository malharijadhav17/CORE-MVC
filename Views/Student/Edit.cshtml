@model Student
@{
}


<div class="row">
    <div class="col-md-8 rounded  mx-auto border p-3">
        <h2 class="text-center mb-5">Edit Student</h2>
        <form method="post" asp-action="Edit" enctype="multipart/form-data">

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" asp-for="SName" />
                    <span asp-validation-for="SName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Contact</label>
                <div class="col-sm-8">
                    <input class="form-control" type="number" asp-for="SContact" />
                    <span asp-validation-for="SContact" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Address</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" asp-for="SAddress" />
                    <span asp-validation-for="SAddress" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Profile</label>
                <div class="col-sm-8">
                    <input class="form-control" type="file" asp-for="SProfile" />
                    <span asp-validation-for="SProfile" class="text-danger"></span>  
                    <img src="@ViewData["SProfile"]" width="100" height="100" class="mt-2"/>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Class</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="SClass">
                        <option value="">Select Class</option>
                        <option value="BSC.CS">BSC.CS</option>
                        <option value="BCA">BCA</option>
                        <option value="MSC.CS">MSC.CS</option>
                        <option value="MCA">MCA</option>
                    </select>
                    <span asp-validation-for="SClass" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Fees</label>
                <div class="col-sm-8">
                    <input class="form-control" type="number" asp-for="SFees" />
                    <span asp-validation-for="SFees" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">User</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="CreatedUser" />
                    <span asp-validation-for="CreatedUser" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4 offset-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <button role="button" class="btn-danger" asp-controller="Student" asp-action="Index">Clear</button>
                </div>
            </div>

        </form>
    </div>
</div>

